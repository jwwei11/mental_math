<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all scores
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new score
    </h2>

    <form action="/insert_score" method="post">
      <div class="form-group">
        <label for="total_score_box">
          Total score
        </label>

        <input type="text" id="total_score_box" name="total_score_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="question_types_box">
          Question types
        </label>

        <input type="text" id="question_types_box" name="question_types_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="response_times_box">
          Response times
        </label>

        <input type="text" id="response_times_box" name="response_times_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="setting_id_box">
          Setting
        </label>

        <input type="text" id="setting_id_box" name="setting_id_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create score
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Total score
        </th>

        <th>
          Question types
        </th>

        <th>
          Response times
        </th>

        <th>
          Setting
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @scores.each do |score| %>
      <tr>
        <td>
          <%= score.id %>
        </td>

        <td>
          <%= score.total_score %>
        </td>

        <td>
          <%= score.question_types %>
        </td>

        <td>
          <%= score.response_times %>
        </td>

        <td>
          <%= score.setting_id %>
        </td>

        <td>
          <%= time_ago_in_words(score.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(score.updated_at) %> ago
        </td>

        <td>
          <a href="/scores/<%= score.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
